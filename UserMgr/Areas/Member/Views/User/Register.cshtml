@using UserMgr.Areas.Member.Models
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Member/Views/Shared/_LayoutMember.cshtml";
}

<div class="middle-box text-center loginscreen   animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name">H+</h1>

        </div>
        <h3>欢迎注册 H+</h3>
        <p>创建一个H+新账户</p>
        @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "m-t" }))
        {
            <div class="form-group">
                @Html.TextBoxFor(u => u.UserName, new { @class = "form-control", placeholder = "用户名" })
                @Html.ValidationMessage("UserName", new { @class = "text-danger pull-right" })

            </div>
            <div class="form-group">
                @Html.TextBoxFor(u => u.UserEmail, new { @class = "form-control", placeholder = "电子邮箱" })
                @Html.ValidationMessage("UserEmail", new { @class = "text-danger pull-right" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(u => u.UserPasswd, new { @class = "form-control", placeholder = "密码" })
                @Html.ValidationMessage("UserPasswd", new { @class = "text-danger pull-right" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(u => u.ConfirmUserPasswd, new { @class = "form-control", placeholder = "确认密码" })
                @Html.ValidationMessage("ConfirmUserPasswd", new { @class = "text-danger pull-right" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(u => u.UserDesc, new { @class = "form-control", placeholder = "注册说明，方便审核通过" })
                @Html.ValidationMessage("UserDesc", new { @class = "text-danger pull-right" })
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">注 册</button>
            <p class="text-muted text-center">
                <small>已经有账户了？</small><a href="/Member/User/Login">点此登录</a>
            </p>
        }

    </div>
</div>


