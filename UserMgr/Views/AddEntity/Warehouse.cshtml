@using UserMgr.Models
@model WarehouseViewModel

@{
    ViewBag.Title = "Warehouse";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>添加仓库</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("Warehouse", "AddEntity", FormMethod.Post, new { @class = "form-horizontal m-t" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">仓库名称：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(w => w.WarehouseName, new { @class = "form-control" })
                                @Html.ValidationMessage("WarehouseName", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">仓库编号：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(w => w.WarehouseNo, new { @class = "form-control" })
                                @Html.ValidationMessage("WarehouseNo", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">仓库类型：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(w => w.WarehouseType, new { @class = "form-control" })
                                @Html.ValidationMessage("WarehouseType", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">备注：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(w => w.Remark, new { @class = "form-control" })
                                @Html.ValidationMessage("Remark", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">其他信息：</label>
                            <div class="col-sm-8">
                                @Html.TextAreaFor(w => w.OtherInfo, new { @class = "form-control" })
                                @Html.ValidationMessage("OtherInfo", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-3">
                                @Html.CheckBoxFor(w => w.Enable)
                                <label>是否启用</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit">添加</button>
                            </div>
                            @Html.ValidationMessage("Msg", new { @class = "text-danger" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>