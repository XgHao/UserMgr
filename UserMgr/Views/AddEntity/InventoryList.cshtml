@using UserMgr.Models
@model InventoryListViewModel

@{
    ViewBag.Title = "库存清单";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>添加库存清单</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("InventoryList", "AddEntity", FormMethod.Post, new { @class = "form-horizontal m-t" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-3 control-label">库区名称：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(il => il., new { @class = "form-control" })
                                @Html.ValidationMessage("InventoryAreaName", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">库区编号：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(il => il.InventoryAreaNo, new { @class = "form-control" })
                                @Html.ValidationMessage("InventoryAreaNo", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">库区类型：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(il => il.InventoryAreaType, new { @class = "form-control" })
                                @Html.ValidationMessage("InventoryAreaType", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">所属仓库：</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(il => il.WarehouseID, ViewData["Warehouse"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "font-size: 13px" })
                                @Html.ValidationMessage("WarehouseID", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">备注：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(il => il.Remark, new { @class = "form-control" })
                                @Html.ValidationMessage("Remark", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">其他信息：</label>
                            <div class="col-sm-8">
                                @Html.TextAreaFor(il => il.OtherInfo, new { @class = "form-control" })
                                @Html.ValidationMessage("OtherInfo", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-3">
                                @Html.CheckBoxFor(il => il.Enable)
                                <label>是否开放</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit">添加</button>
                            </div>
                            @Html.ValidationMessage("Msg", new { @class = "text-danger" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
