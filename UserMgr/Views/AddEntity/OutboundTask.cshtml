@using UserMgr.Models
@model OutboundTaskViewModel


@{
    ViewBag.Title = "新增出库任务单";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>添加出库任务</h5>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("OutboundTask", "AddEntity", FormMethod.Post, new { @class = "form-horizontal m-t" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label class="col-sm-3 control-label">出库任务单编码：</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(ob => ob.OutboundTaskNo, new { @class = "form-control" })
                                    @Html.ValidationMessage("OutboundTaskNo", new { @class = "text-danger pull-right" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">出库类型：</label>
                                <div class="col-sm-3">
                                    @Html.DropDownListFor(ob => ob.OutboundType, ViewData["OutboundTypeDDL"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "font-size:13px" })
                                    @Html.ValidationMessage("OutboundType", new { @class = "text-danger pull-right" })
                                </div>
                                <label class="col-sm-2 control-label">销售类型：</label>
                                <div class="col-sm-3">
                                    @Html.DropDownListFor(ob => ob.SaleTypeID, ViewData["SaleTypeDDL"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "font-size:13px" })
                                    @Html.ValidationMessage("SaleTypeID", new { @class = "text-danger pull-right" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">外部单号：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(ob => ob.ExterNo, new { @class = "form-control" })
                                    @Html.ValidationMessage("ExterNo", new { @class = "text-danger pull-right" })
                                </div>
                                <label class="col-sm-2 control-label">销售单号：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(ob => ob.SaleNo, new { @class = "form-control" })
                                    @Html.ValidationMessage("SaleNo", new { @class = "text-danger pull-right" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">客户：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(ob => ob.Client, new { @class = "form-control" })
                                    @Html.ValidationMessage("Client", new { @class = "text-danger pull-right" })
                                </div>
                                <label class="col-sm-2 control-label">部门：</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(ob => ob.Department, new { @class = "form-control" })
                                    @Html.ValidationMessage("Department", new { @class = "text-danger pull-right" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">备注：</label>
                                <div class="col-sm-8">
                                    @Html.TextAreaFor(ob => ob.OutboundRemark, new { @class = "form-control" })
                                    @Html.ValidationMessage("OutboundRemark", new { @class = "text-danger pull-right" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-3">
                                    <button class="btn btn-primary" type="submit">添加</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>

