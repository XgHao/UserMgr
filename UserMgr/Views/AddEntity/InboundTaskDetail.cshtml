@using UserMgr.Models
@model InboundTaskDetailViewModel

@{
    ViewBag.Title = "InboundTaskDetail";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@("完善入库任务细节[" + Model.InboundTaskInfo_InboundTaskNo + "]")</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("InboundTaskDetail", "AddEntity", FormMethod.Post, new { @class = "form-horizontal m-t" }))
                    {
                        @Html.HiddenFor(ib => ib.InboundTaskID)
                        <div class="form-group">
                            <label class="col-sm-3 control-label">关联的入库单编码：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(ib => ib.InboundTaskInfo_InboundTaskNo, new { @class = "form-control", @readonly = "" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">物资规格：</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(ib => ib.MaterialSizeID, ViewData["Material"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "font-size:13px" })
                                @Html.ValidationMessage("MaterialSizeID", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">物资数量：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(ib => ib.MaterialNum, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessage("MaterialNum", new { @class = "text-danger pull-right" })
                            </div>
                            <label class="col-sm-2 control-label">重量：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(ib => ib.Weight, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessage("Weight", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">批号：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(ib => ib.BatchNumber, new { @class = "form-control" })
                                @Html.ValidationMessage("BatchNumber", new { @class = "text-danger pull-right" })
                            </div>
                            <label class="col-sm-2 control-label">送货单位：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(ib => ib.DeliveryUnit, new { @class = "form-control" })
                                @Html.ValidationMessage("DeliveryUnit", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">车号：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(ib => ib.CarNum, new { @class = "form-control" })
                                @Html.ValidationMessage("CarNum", new { @class = "text-danger pull-right" })
                            </div>
                            <label class="col-sm-2 control-label">冰衣：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(ib => ib.Glaze, new { @class = "form-control" })
                                @Html.ValidationMessage("Glaze", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">单位：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(ib => ib.Unit, new { @class = "form-control" })
                                @Html.ValidationMessage("Unit", new { @class = "text-danger pull-right" })
                            </div>
                            <label class="col-sm-2 control-label">实际入库数量：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(ib => ib.ActualInboundNum, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessage("ActualInboundNum", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit">添加</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>


