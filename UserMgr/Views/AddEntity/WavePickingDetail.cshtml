@using UserMgr.Models
@model WavePickingDetailViewModel

@{
    ViewBag.Title = "WavePickingDetail";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>添加波次</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("WavePickingDetail", "AddEntity", FormMethod.Post, new { @class = "form-horizontal m-wp" }))
                    {
                        @Html.HiddenFor(wp => wp.WavePickingID)
                        <div class="form-group">
                            <label class="col-sm-3 control-label">波次编码：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(wp => wp.WavePickingNo, new { @class = "form-control", @readonly = "" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">出库明细单：</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(wp => wp.OutboundTaskDetailID, ViewData["OutboundTaskDetail"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "font-size:13px" })
                                @Html.ValidationMessage("OutboundTaskDetailID", new { @class = "text-danger pull-right" })
                            </div>
                            <label class="col-sm-2 control-label">物资规格：</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(wp => wp.MaterialSizeID, ViewData["Material"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "font-size:13px" })
                                @Html.ValidationMessage("MaterialSizeID", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">物资数量：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(wp => wp.MaterialNum, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessage("MaterialNum", new { @class = "text-danger pull-right" })
                            </div>
                            <label class="col-sm-2 control-label">批号：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(wp => wp.BatchNumber, new { @class = "form-control" })
                                @Html.ValidationMessage("BatchNumber", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">托盘明细：</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(wp => wp.TrayDetailID, ViewData["TrayDetail"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "font-size:13px" })
                                @Html.ValidationMessage("TrayDetailID", new { @class = "text-danger pull-right" })
                            </div>
                            <label class="col-sm-2 control-label">分配数量：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(wp => wp.QuantityAllotted, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessage("QuantityAllotted", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">库存：</label>
                            <div class="col-sm-8">
                                @Html.DropDownListFor(wp => wp.InventoryID, ViewData["InventoryList"] as IEnumerable<SelectListItem>, new { @class = "form-control", @style = "font-size:13px" })
                                @Html.ValidationMessage("InventoryID", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">冰衣：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(wp => wp.Glaze, new { @class = "form-control" })
                                @Html.ValidationMessage("Glaze", new { @class = "text-danger pull-right" })
                            </div>
                            <label class="col-sm-2 control-label">单位：</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(wp => wp.Unit, new { @class = "form-control" })
                                @Html.ValidationMessage("Unit", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit">添加</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



