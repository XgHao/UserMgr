@using UserMgr.Entities.View
@model List<View_InboundTask>

@{
    ViewBag.Title = "入库任务单列表";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}

<div class="wrapper wrapper-content animated fadeInUp">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>所有项目</h5>
                    <div class="ibox-tools">
                        <a href="/AddEntity/InboundTask" class="btn btn-primary btn-xs">创建入库任务单</a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-1">
                            <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> 刷新</button>
                        </div>
                        <div class="col-md-11">
                            <div class="input-group">
                                <input type="text" placeholder="请输入项目名称" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> 搜索</button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="project-list">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="project-status">
                                        <h3>状态</h3>
                                    </th>
                                    <th align="center">
                                        <h3>入库任务单编码</h3>
                                    </th>
                                    <th align="center">
                                        <h3>入库类型</h3>
                                    </th>
                                    <th class="project-status">
                                        <h3>备注</h3>
                                    </th>
                                    <th class="project-status">
                                        <h3>供应商</h3>
                                    </th>
                                    <th class="project-status">
                                        <h3>外部单号</h3>
                                    </th>
                                    <th class="project-status">
                                        <h3>采购单号</h3>
                                    </th>
                                    <th class="project-actions">
                                        <h3>最后修改人</h3>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    string res = $"label-{item.HtmlAttributes}";
                                    <tr class=@(item.HtmlAttributes)>
                                        <td class="project-status">
                                            <span class="@($"label label-{item.HtmlAttributes}")">@item.StatusName</span>
                                        </td>
                                        <td class="project-title">
                                            <a href="project_detail.html">@item.InboundTaskNo</a>
                                            <br />
                                            <small>@($"创建于{item.CreateTime}  修改于{item.ChangeTime}")</small>
                                        </td>
                                        <td>
                                            <h4>@item.InboundType</h4>
                                        </td>
                                        <td>
                                            <h4>@item.InboundRemark</h4>
                                        </td>
                                        <td>
                                            <h4>@item.SupplierName</h4>
                                        </td>
                                        <td>
                                            <h4>@item.ExterNo</h4>
                                        </td>
                                        <td>
                                            <h4>@item.OrderNo</h4>
                                        </td>
                                        <td class="project-people">
                                            <h4>@item.ChangerName</h4>
                                        </td>
                                        <td class="project-actions">
                                            <a href=@($"/EditEntity/InboundTask?Id={item.InboundTaskID}") class="btn btn-white btn-sm"><i class="fa fa-edit"></i> 修改 </a>
                                            @if (item.InboundTaskDetailID == null)
                                            {
                                                <a href=@($"/AddEntity/InboundTaskDetail?ibtid={item.InboundTaskID}") class="btn btn-white btn-sm">
                                                    <i class="fa fa-external-link"></i> 生成入库细节
                                                </a>
                                            }
                                            else
                                            {
                                                <a href=@($"/Warehouse/InboundTaskDetail?ibtid={item.InboundTaskDetailID}") class="btn btn-white btn-sm">
                                                    <i class="fa fa-eye"></i> 查看入库细节
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


