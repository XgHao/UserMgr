@using UserMgr.Models
@model List<OutboundTaskDetailViewModel>

@{
    ViewBag.Title = "OutboundTaskDetail";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}

<div class="wrapper wrapper-content animated fadeIn">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-12">
                <div class="@($"panel panel-{item.OutboundTask.HtmlAttributes}")">
                    <div class="panel-heading">
                        @($"{item.OutboundTask.OutboundTaskNo} - [{item.OutboundTask.StatusName}]")
                    </div>
                    <div class="panel-body">
                        <div class="panel blank-panel">
                            <div class="panel-heading">
                                <div class="panel-options">

                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a data-toggle="tab" href="@($"#tab-1-{item.OutboundTaskDetailID}")"><i class="fa fa-th"> 出库任务细节信息</i></a>
                                        </li>
                                        <li class="">
                                            <a data-toggle="tab" href="@($"#tab-2-{item.OutboundTaskDetailID}")"><i class="fa fa-th-large"> 出库任务信息</i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="tab-content">
                                    <div id="@($"tab-1-{item.OutboundTaskDetailID}")" class="tab-pane active">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.OutboundTaskNo</h3>
                                                    <small>出库任务编号</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.BatchNumber</h3>
                                                    <small>批号</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.DeliveryUnit</h3>
                                                    <small>送货单位</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.MaterialSizeInfo</h3>
                                                    <small>物资规格信息</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.CarNum</h3>
                                                    <small>车号</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.Glaze</h3>
                                                    <small>冰衣</small>
                                                </blockquote>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.Weight</h3>
                                                    <small>件重</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.MaterialNum</h3>
                                                    <small>物资数量</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.QuantityAllotted</h3>
                                                    <small>分配数量</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.DispatchNum</h3>
                                                    <small>发货数量</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTaskDetail.Unit</h3>
                                                    <small>单位</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@($"{item.OutboundTaskDetail.CreaterName} & {item.OutboundTaskDetail.CreateTime}")</h3>
                                                    <small>创建人 & 时间</small>
                                                </blockquote>
                                            </div>
                                        </div>
                                    </div>

                                    <div id="@($"tab-2-{item.OutboundTaskDetailID}")" class="tab-pane">
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTask.OutboundTaskNo</h3>
                                                    <small>入库任务编号</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTask.OutboundType</h3>
                                                    <small>入库类型</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTask.Client</h3>
                                                    <small>客户</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTask.OutboundRemark</h3>
                                                    <small>备注</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTask.ExterNo</h3>
                                                    <small>外部单号</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTask.SaleNo</h3>
                                                    <small>销售单号</small>
                                                </blockquote>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTask.Department</h3>
                                                    <small>部门</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@($"{item.OutboundTask.CreaterName} & {item.OutboundTask.CreateTime}")</h3>
                                                    <small>创建人 & 时间</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@($"{item.OutboundTask.ChangerName} & {item.OutboundTask.ChangeTime}")</h3>
                                                    <small>修改人 & 时间</small>
                                                </blockquote>
                                            </div>
                                            <div class="col-sm-2">
                                                <blockquote>
                                                    <h3>@item.OutboundTask.TaskCompletionTime</h3>
                                                    <small>任务完成时间</small>
                                                </blockquote>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" align="right">
                        @($"最后修改信息： {item.OutboundTaskDetail.ChangerName}  {item.OutboundTaskDetail.ChangeTime}")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

