@using UserMgr.Models
@model UnitViewModel

@{
    ViewBag.Title = "Unit";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>编辑单位</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal m-t">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">单位名称：</label>
                            <input id="ID_Unit" type="hidden" value=@Model.UnitID />
                            <div class="col-sm-8">
                                <input class="form-control" id="Name_Unit" type="text" value=@Model.UnitName />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-3">
                                <button id="EditBasicData" name="Unit" class="btn btn-primary" type="submit">修改</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

