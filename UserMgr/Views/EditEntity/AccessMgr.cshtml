                        @Html.HiddenFor(p => p.PageID);
                        <div class="form-group">
                            <label class="col-sm-3 control-label">页面URL：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(p => p.PageUrl, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">页面名称：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(p => p.PageName, new { @class = "form-control" })
                                @Html.ValidationMessage("PageName", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">访问等级：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(p => p.PageClass, new { @class = "form-control" })
                                @Html.ValidationMessage("PageClass", new { @class = "text-danger pull-right" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">访问白名单：</label>
