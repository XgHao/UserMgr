        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>编辑页面</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("AccessMgr", "EditEntity", FormMethod.Post, new { @class = "form-horizontal m-t" }))
