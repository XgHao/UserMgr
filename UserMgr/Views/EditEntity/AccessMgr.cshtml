@using UserMgr.Models
@model PageViewModel

@{
    ViewBag.Title = "编辑页面访问权限";
    Layout = "~/Views/Layout/_LayoutIndex.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
